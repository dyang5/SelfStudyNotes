% Redefine proof environment to get a full control. 
\makeatletter
\renewenvironment{proof}[1][\proofname]{\par
    \pushQED{\qed}%
    \normalfont \topsep-2\p@\@plus6\p@\relax
    \trivlist
    \item[\hskip\labelsep
                \color{NavyBlue!70!black}\sffamily\bfseries
                #1\@addpunct{.}]\ignorespaces
    \begin{mdframed}[linewidth=2pt,rightline=false, topline=false, bottomline=false,linecolor=NavyBlue, backgroundcolor=NavyBlue!1]
        }{%
        \popQED\endtrivlist\@endpefalse
    \end{mdframed}
}
